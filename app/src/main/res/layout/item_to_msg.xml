<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:orientation="vertical">

    <TextView
        android:id="@+id/id_to_msg_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#bebebe"
        android:text="12:12"
        android:textColor="#f5f5f5"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_my_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@+id/iv_me_touxiang"
                android:text="Daniel"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/id_to_msg_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_my_name"
                android:layout_toLeftOf="@+id/iv_me_touxiang"
                android:background="@drawable/chatto_bg_normal"
                android:gravity="center"
                android:text="你好"
                android:textSize="16sp" />


            <ImageView
                android:id="@+id/iv_me_touxiang"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/me" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>